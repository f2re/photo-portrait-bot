# Telegram
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username  # Bot username without @ (e.g., "bg_remove_bot")
ADMIN_IDS=123456789,987654321

# Database - Option 1: Use single DATABASE_URL (recommended)
DATABASE_URL=postgresql+asyncpg://bgremove_user:your_secure_password@localhost:5432/bg_removal_bot

# Database - Option 2: Use individual variables (will be ignored if DATABASE_URL is set)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=bg_removal_bot
# DB_USER=bgremove_user
# DB_PASSWORD=your_secure_password

# Bria API (for transparent backgrounds) - https://platform.bria.ai/
BRIA_API_KEY=your_bria_api_key_here
BRIA_API_URL=https://engine.prod.bria-api.com/v2

# OpenRouter API (for white backgrounds, lossless quality) - https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=google/gemini-2.5-flash-image-preview

# YooKassa (ЮКасса) - https://yookassa.ru/
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key
# Return URL shown to users after payment (e.g., your bot's t.me link)
YOOKASSA_RETURN_URL=https://t.me/your_bot_username

# Pricing and Packages Configuration (prices in rubles - рубли)
# Package 1
PACKAGE_1_NAME=Старт
PACKAGE_1_IMAGES=5
PACKAGE_1_PRICE=149

# Package 2
PACKAGE_2_NAME=Базовый
PACKAGE_2_IMAGES=10
PACKAGE_2_PRICE=249

# Package 3
PACKAGE_3_NAME=Профи
PACKAGE_3_IMAGES=50
PACKAGE_3_PRICE=999

# Package 4
PACKAGE_4_NAME=Безлимит
PACKAGE_4_IMAGES=200
PACKAGE_4_PRICE=2990

# Free images for new users
FREE_IMAGES_COUNT=3

# Demo video file_id (получите загрузив видео боту)
DEMO_VIDEO_FILE_ID=

# Logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Yandex Metrika (optional - for analytics and conversion tracking)
# Get Counter ID and OAuth Token from https://metrika.yandex.ru/
# Leave empty to disable Metrika integration (events will still be stored in database)
YANDEX_METRIKA_COUNTER_ID=
YANDEX_METRIKA_TOKEN=

# Metrika goal names (customize if needed)
METRIKA_GOAL_START=start_bot
METRIKA_GOAL_FIRST_IMAGE=first_image
METRIKA_GOAL_PURCHASE=purchase

# Metrika upload interval in seconds (default: 3600 = 1 hour)
METRIKA_UPLOAD_INTERVAL=3600

# Referral Program Configuration
# Reward given to referrer when new user clicks /start (in images)
REFERRAL_REWARD_START=5

# Percentage of images given to referrer when referral makes a purchase (10 = 10%)
# Example: If referral buys 10 images, referrer gets 1 image (10% of 10)
REFERRAL_REWARD_PURCHASE_PERCENT=10
